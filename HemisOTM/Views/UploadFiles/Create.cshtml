@model DataModelEntity.Entity.UploadFile

@{
    ViewData["Title"] = "Create";
}

<div class="col-12">
    <div class="card card-header sameheight-item">
        <a style="width:60px; height:30px" asp-action="Create" asp-controller="Subjects" class="btn btn-primary">
            <i class="fa fa-backward"></i>
        </a><h3>Upload your file</h3>
        <div class="card-header">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FileName" class="control-label"></label>
                            <input asp-for="FileName" class="form-control" />
                            <span asp-validation-for="FileName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> Select a file from memory </label><br />
                            <input asp-for="Url" type="file" name="urlFile" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
                <h3> List of uploaded files </h3><br />
                <table class="table table-bordered">
                    <thead>
                        <tr class="table-active">
                            <th>
                                File Name
                            </th>
                            <th>
                                Url address
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Books)
                        {
                            <tr>
                                <td>
                                    @item.FileName
                                </td>
                                <td>
                                    @item.Url
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FileId">Open</a> |
                                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.FileId">Delete</a>|
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.FileId">Select</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
