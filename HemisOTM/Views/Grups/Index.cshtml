@model IEnumerable<DataModelEntity.Entity.Grup>

@{
    ViewData["Title"] = "Index";
}

<div class="col-12">
    <div class="card card-header sameheight-item">
        <div class="card-header">
            <div class="header-block">
                <h3 class="title">
                    <label class="nounderline">
                        <i class="fa fa-pencil-square-o"></i> Grups
                    </label>
                </h3>
            </div>
            <form asp-action="Index" method="get" class="header-block pull-right">
                <div>
                    <label class="search">
                        <i class="fa fa-search search-icon"> </i>
                        <input type="text" class="search-input" name="SearchString" placeholder=" Search..." />
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                            Create
                        </a>
                    </label>
                </div>
            </form>
        </div>
        <table class="table">
            <thead class="table-active">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Number of students allowed
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            
                        </td>
                        <td>
                            <a asp-action="Edit" class="fa fa-eye" asp-route-id="@item.GrupId">Edit</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
