@model IEnumerable<DataModelEntity.Entity.Grup>

@{
    ViewData["Title"] = "Index";
}

<div class="col-12">
    <div class="card card-header sameheight-item">
        <div class="card-header">
            <div class="header-block">
                <h3 class="title">
                    <label class="nounderline">
                        <i class="fa fa-pencil-square-o"></i> Gruhlar ro'yxati
                    </label>
                </h3>
            </div>
            <form asp-action="Index" method="get" class="header-block pull-right">
                <div>
                    <label class="search">
                        <i class="fa fa-search search-icon"> </i>
                        <input type="text" class="search-input" name="SearchString" placeholder=" Search..." />
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                             Yangi gruh yaratish
                        </a>
                    </label>
                </div>
            </form>
        </div>
        <table class="table">
            <thead class="table-active">
                <tr>
                    <th>
                       Gruh nomi
                    </th>
                    <th>
                        Talabalar soni
                    </th>
                    <th>
                        Ko'rish
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.isPranet)
                    {
                        <tr class="table-active">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DirectionList.Name)
                            </td>
                            <td>
                                <a asp-action="AllStudent" class="fa fa-database" asp-route-id="@item.GrupId"> Barchasi</a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                            </td>
                            <td>
                                <a asp-action="Edit" class="fa fa-pencil" asp-route-id="@item.GrupId"> Tahrirlash</a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
        </div>
    </div>
