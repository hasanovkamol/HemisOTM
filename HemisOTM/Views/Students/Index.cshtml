@model IEnumerable<DataModelEntity.Entity.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="col-sm-12">
    <div class="card card-header sameheight-item">
        <div class="card-header">
            <div class="header-block">
                <h3 class="title">
                    <label class="nounderline">
                        <i class="fa fa-pencil-square-o"></i> Talabalar ro'yxati
                    </label>
                </h3>
            </div>
            <form asp-action="Index" method="get" class="header-block pull-right">
                <div>
                    <label class="search">
                        <i class="fa fa-search search-icon"> </i>
                        <input type="text" class="search-input" name="SearchString" placeholder=" Search..."  />
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                            Qo'shish
                        </a>
                    </label>
                </div>
            </form>
        </div>
        <table class="table">
            <thead>
                <tr class="table-active">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Middilname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetDirection)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Course)
                    </th>
                    <th>
                       Birlashgan guruh nomi
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Middilname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GetDirection.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course)
                    </td>
                    <td>
                        @if (item.GrupName == null)
                        {
                        <p>Guruhga birlashmagan</p>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.GrupName)
                        }
                    </td>
                    <td>
                        <a class="fa fa-pencil" asp-action="Edit" asp-route-id="@item.StudentId"> Tahrirlash</a> |
                        <a class="fa fa-close" asp-action="Delete" asp-route-id="@item.StudentId"> O'chirish</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
 </div>

