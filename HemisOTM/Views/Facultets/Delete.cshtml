@model DataModelEntity.Entity.Facultet

@{
    ViewData["Title"] = "Delete";
}
<div class="col-12">
    <div class="card card-header sameheight-item">
        <a style="width:60px; height:30px" asp-action="Create" asp-controller="Facultets" class="btn btn-primary">
            <i class="fa fa-backward"></i>
        </a><h3>Are you sure you want to delete this?</h3>
        <div class="card-header">
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-10">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="FacultetID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </form>
            </div>
        </div>
    </div>
</div>