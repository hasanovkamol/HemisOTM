@model DataModelEntity.Entity.Teacher

@{
    ViewData["Title"] = "Edit";
}

<div class="col-12">
    <div class="card card-header sameheight-item">
        <a style="width:60px; height:30px" asp-action="Index" asp-controller="Teachers" class="btn btn-primary">
            <i class="fa fa-backward"></i>
        </a><h3>O'qituvchini tahrirlash</h3>
        <div class="row">
            <div class="col-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TeacherId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Middilname" class="control-label"></label>
                        <input asp-for="Middilname" class="form-control" />
                        <span asp-validation-for="Middilname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label">Lavozim</label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AcademicDegree" class="control-label"></label>
                        <input asp-for="AcademicDegree" class="form-control" />
                        <span asp-validation-for="AcademicDegree" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GetDepartment.Name" class="control-label"></label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentName"></select>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
