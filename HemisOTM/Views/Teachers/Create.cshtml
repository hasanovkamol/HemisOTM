@model DataModelEntity.Entity.Teacher

@{
    ViewData["Title"] = "Create";
}

<div class="col-12">
    <div class="card card-block sameheight-item">
        <div class="title-block">
            <div class="header-block">
                <h2 class="title" >Add new teacher</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Middilname" class="control-label"></label>
                        <input asp-for="Middilname" class="form-control" />
                        <span asp-validation-for="Middilname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AcademicDegree" class="control-label"></label>
                        <input asp-for="AcademicDegree" class="form-control" />
                        <span asp-validation-for="AcademicDegree" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Select Department Name</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentName"></select>
                        <br/>
                        <a class="btn btn-primary-outline" asp-controller="Departments" asp-action="Create">Add new department</a>
                       
                    </div>
                    <div class="form-group">
                        <a class="btn btn-warning" asp-action="Index">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            
        </div>
        </div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
