@model IEnumerable<DataModelEntity.Entity.HarvestPlan>

@{
    ViewData["Title"] = "Index";
}

<div class="col-12">
    <div class="card card-header sameheight-item">
        <div class="card-header">
            <div class="header-block">
                <h3 class="title">
                    <label class="nounderline">
                        <i class="fa fa-pencil-square-o"></i> O'quv rejalar ro'yxati
                    </label>
                </h3>
            </div>
       
            <form asp-action="Index" method="get" class="header-block pull-right">
                <div>
                    <label class="search">
                        <i class="fa fa-search search-icon"> </i>
                        <input type="text" class="search-input" name="SearchString" placeholder=" Search..." />
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                            O'quv reja shaklantirish
                        </a>
                    </label>
                </div>
            </form>
       
        </div>
            <table class="table">
                <thead>
                    <tr class="table-primary">
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GetDepartment.Name)
                        </th>
                        <th>
                           Ma'sul (FIO)
                        </th>
                        <th>
                            Fanlar soni
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grups.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.Grups.isPranet)
                        {
                    <tr class="table-active">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetDepartment.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetTeacher.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grups.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subjects.Count)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.HarvestPlanId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.HarvestPlanId">Details</a> |
                            <a asp-action="TraingPlan" asp-route-id="@item.HarvestPlanId">Tahrirlash</a>
                 
                        </td>
                    </tr>
                        }
                        else
                        {
                            <tr class="table-hover">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GetDepartment.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GetTeacher.Name + " " + item.GetTeacher.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Grups.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.HarvestPlanId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.HarvestPlanId">Details</a> |
                                    <a asp-action="TraingPlan" asp-route-id="@item.HarvestPlanId">Tahrirlash</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            </div>
</div>